---
import Layout from "../layouts/Layout.astro";
import Header from "../components/ui/Header.astro";
import Footer from "../components/ui/Footer.astro";
import HeroSection from "../components/sections/HeroSection.tsx";
import JourneySection from "../components/sections/JourneySection.tsx";
import CareerPathSection from "../components/sections/CareerPathSection.tsx";
import SkillsSection from "../components/sections/SkillsSection.tsx";
import FeaturedWorkSection from "../components/sections/FeaturedWorkSection.tsx";
import ContactSection from "../components/sections/ContactSection.astro";
---

<Layout>
  <Header />
  <main id="main-content">
    <HeroSection client:load />
    <JourneySection client:load />
    <CareerPathSection client:load />
    <SkillsSection client:load />
    <FeaturedWorkSection client:load />
    <ContactSection />
  </main>
  <Footer />
</Layout>
